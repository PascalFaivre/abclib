<c74object name="abc.linedrive~" module="abclib">
  <digest>Abclib's exponential curve</digest>
  <description><o>abc.linedrive~</o> converts a signal between 0 and 127 to a signal between 0 and outputmax following an exponential profile to be defined by the expcurve parameter.</description>

  <!--INLETS-->
  <!-- <inletlist>
    <inlet id="0" type="INLET_TYPE">
      <digest></digest>
      <description></description>
    </inlet>
  </inletlist> -->

  <!--OUTLETS-->
  <!-- <outletlist>
    <outlet id="0" type="OUTLET_TYPE">
      <digest></digest>
      <description></description>
    </outlet>
  </outletlist> -->

  <objarglist>
  </objarglist>

  <!--ATTRIBUTES-->
  <attributelist>
    <attribute name="outputmax" type="float" set="1" get="1" size="1">
      <description>sets the maximum output. [init=1:min=0:max=100000:step=0.01].</description>
      <digest>sets the maximum output</digest>
    </attribute>

    <attribute name="expcurve" type="float" set="1" get="1" size="1">
      <description>sets the exponential profile. [init=1.06:min=1e-05:max=2:step=1e-05].</description>
      <digest>sets the exponential profile</digest>
    </attribute>
  </attributelist>

  <!--MESSAGES-->
  <methodlist>

    <method name="outputmax">
      <arglist>
        <arg type="float" />
      </arglist>
      <description>sets the maximum output. [init=1:min=0:max=100000:step=0.01].</description>
      <digest>sets the maximum output</digest>
    </method>

    <method name="expcurve">
      <arglist>
        <arg type="float" />
      </arglist>
      <description>sets the exponential profile. [init=1.06:min=1e-05:max=2:step=1e-05].</description>
      <digest>sets the exponential profile</digest>
    </method>

  </methodlist>

  <seealsolist>
    <seealso name="abc.peakamp~" />
